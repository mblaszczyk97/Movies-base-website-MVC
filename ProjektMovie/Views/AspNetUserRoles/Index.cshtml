@model IEnumerable<ProjektMovie.Models.AspNetUserRoles>

@{
    ViewBag.Title = "Index";
}

<h2>Role do użytkowników</h2>

<p>
    @Html.ActionLink("dodaj", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.User.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Role.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role.Name)
            </td>
            <td>
                @Html.ActionLink("Usuń", "Delete", new { id1=item.UserId, id2=item.RoleId })
            </td>
        </tr>
    }

</table>
